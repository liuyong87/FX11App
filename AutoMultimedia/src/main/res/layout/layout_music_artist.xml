<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_artist_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_album"
            android:src="@drawable/artist_defaut"
            android:layout_width="54px"
            android:layout_height="54px" />
        <RelativeLayout
            android:layout_marginLeft="17px"
            android:layout_alignBaseline="@+id/im_album"
            android:layout_toRightOf="@+id/im_album"
            android:layout_width="wrap_content"
            android:layout_height="55px">
            <TextView
                android:layout_marginTop="5px"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="19px"
                android:text="helloWorld"
                android:id="@+id/tv_artistName"
                android:layout_width="100px"
                android:layout_height="wrap_content" />
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorArtist"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5px"
                android:layout_marginTop="11px"
                android:textSize="16px"
                android:text="helloWorld"
                android:id="@+id/tv_artist_count"
                android:layout_width="80px"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
