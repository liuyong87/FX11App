<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/playbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginLeft="80px"
        android:layout_marginTop="40px"
        android:layout_alignParentTop="true"
        android:textSize="20px"
        android:textColor="@color/white"
        android:id="@+id/tv_playing"
        android:text="@string/tv_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="20px"
        android:textColor="@color/white"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="20px"
        android:layout_marginLeft="80px"
        android:layout_above="@+id/iv_cancel"
        android:layout_marginBottom="10px"
        android:layout_marginTop="20px"
        android:layout_below="@+id/tv_playing"
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_marginLeft="20px"
        android:layout_marginBottom="20px"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_cancel"
        android:src="@drawable/btn_cancel_normal"
        android:layout_width="54px"
        android:layout_height="54px" />

</RelativeLayout>
