<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_play_control_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_list"
        style="@style/PhotoBottomBarViewStyle"
        android:src="@drawable/selector_photo_btn_list"
        android:layout_marginLeft="72px"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/iv_rotate"
        style="@style/PhotoBottomBarViewStyle"
        android:src="@drawable/selector_photo_btn_rotate"
        android:layout_gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/iv_set_wallpaper"/>

    <ImageView
        android:id="@+id/iv_set_wallpaper"
        style="@style/PhotoBottomBarViewStyle"
        android:src="@drawable/selector_photo_btn_set_wallpaper"
        android:layout_marginLeft="106px"
        android:layout_marginRight="410px"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"/>

</RelativeLayout>
