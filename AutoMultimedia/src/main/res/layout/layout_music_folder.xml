<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_folderInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_folder"
        android:src="@drawable/music_list_folder"
        android:layout_width="167px"
        android:layout_height="167px" />
    <TextView
        android:textSize="20px"
        android:paddingLeft="10px"
        android:layout_marginTop="23px"
        android:layout_below="@+id/iv_folder"
        android:id="@+id/tv_folderName"
        android:textColor="@color/folder_name"
        android:layout_width="167px"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
