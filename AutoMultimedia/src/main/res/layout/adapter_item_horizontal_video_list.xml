<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240px"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="15px"
        android:paddingRight="15px">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px">

            <ImageView
                android:id="@+id/iv_video_thumb"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:background="@drawable/video_logo" />

            <ImageView
                android:id="@+id/iv_video_status"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:src="@drawable/video_btn_play_normal"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11px"
            android:layout_marginTop="19px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@android:string/unknownName"
            android:textColor="@android:color/white"
            android:textSize="19px" />
    </LinearLayout>


</RelativeLayout>
